          <div class="col-sm-2 bg-white pt-2 p-4">
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/1-ben-ahlers.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/3-kelli-ohara.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/4-taylor-richardson.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/5-carrie-coon.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/6-morgan-spector.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/7-louisa-jacobson.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/8-celia-keenan-bolger.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/9-kristine-nielsen.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/11-douglas-sills.jpg" width="auto" height="75">
            <br>
            <img class="mx-auto d-block rounded-circle" src="/cast-photos/12-michael-cerveris.jpg" width="auto" height="75">
          </div>

          <div class="col-sm-4 bg-white pt-3">
            <% castObject.forEach((item)=>{ %>
              <% if (item.id===11 || item.id===12 || item.id===9 || item.id===8 || item.id===7 || item.id===6 || item.id===5 || item.id==4 || item.id===3 || item.id===1) { %>
                <h5 class="text-dark pt-3"><%= item.actor %></h5>
                <h7 class="text-secondary"><%= item.character %></h7>
                <br>
                <br>
              <% } %>
            <% }) %>
          </div>
        </div>
      </div>

      <!---->
      <footer>
        <%- include('../partials/footer'); %>
      </footer>

  </div>

  
    
  </body>
</html>